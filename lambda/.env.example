# AWS Lambda Environment Variables for Configuration Endpoint
# Copy this file to .env and fill in your actual values

# API URLs
COMMENT_API_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/default/comment
COMMENTS_API_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/default/comments

# Domain Configuration
PRODUCTION_DOMAIN=resume.lynxpardelle.com
DEV_DOMAIN_URI=http://localhost:5500/frontend/index.html
PRODUCTION_DOMAIN_URI=https://resume.lynxpardelle.com

# AWS Cognito Configuration
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_DOMAIN=https://your-cognito-domain.auth.us-east-1.amazoncognito.com
COGNITO_AUTHORITY=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_YourPoolId
COGNITO_USER_POOL_ID=us-east-1_YourPoolId
COGNITO_REGION=us-east-1

# Cookie Names (optional, will use defaults if not set)
COOKIE_ACCESS_TOKEN=ResumeLynxAccess_token
COOKIE_ID_TOKEN=ResumeLynxId_token
COOKIE_REFRESH_TOKEN=ResumeLynxRefresh_token
COOKIE_EMAIL=ResumeLynxEmail
COOKIE_USER=user

# AWS S3 Patterns (comma separated, optional)
S3_PATTERNS=.s3-website-,.s3.amazonaws.com

# Environment
NODE_ENV=production
